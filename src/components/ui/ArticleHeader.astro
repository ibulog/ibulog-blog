---
import Tag from './Tag.astro';

export interface Props {
	id: string;
	pubDate: Date;
	tags: string[];
	title: string;
}

const { id, pubDate, tags, title } = Astro.props;
---

<div class="flex flex-col gap-4 flex-1">
	<div class="flex flex-row items-center gap-3">
		<div class="flex items-center">
			<time datetime={pubDate.toLocaleDateString()} class="text-xs font-medium leading-none text-app-text-subtle">
				{pubDate.toLocaleDateString()}
			</time>
		</div>
		<div class="flex items-center gap-1.5">
			{tags.map((tag) => (
				<Tag tag={`#${tag}`} />
			))}
		</div>
	</div>
	<div class="px-3 h-full">
		<h2 class="text-xl font-medium leading-[1.5em] text-app-text line-clamp-2">
			<a href={`/blog/${id}`} class="no-underline hover:underline">
				{title}
			</a>
		</h2>
	</div>
</div>

