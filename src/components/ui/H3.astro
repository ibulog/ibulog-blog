---
import SideVector from './SideVector.astro';

export interface Props {
	text?: string;
	id?: string;
}

const { text, id } = Astro.props;
---

<h3
	id={id}
	class="flex flex-row items-center w-full py-4"
>
	<div class="flex flex-row items-center self-stretch">
		<SideVector />
	</div>
	<div class="flex flex-row items-center self-stretch md:px-2 flex-1">
		<div class="flex flex-row items-center gap-2.5 text-lg font-bold text-app-text">
			{text ? text : <slot />}
		</div>
	</div>
</h3>

