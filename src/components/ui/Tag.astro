---
import type { CollectionEntry } from "astro:content";
export interface Props {
	tag: CollectionEntry<'tag'>;
}

const { tag } = Astro.props;

const baseClasses = "inline-flex items-center h-6 px-1.5 rounded-lg bg-app-tag-default border border-accent text-xs font-medium text-app-text-subtle";
const hoverClasses = "hover:bg-app-bg-obvious-reverse hover:text-app-text-subtle-reverse"

const spanClasses = `${baseClasses} ${hoverClasses}`;
---

<a href={`/tags/${tag.id}`} class="no-underline">
	<span class={spanClasses}>
		{tag.data.name}
	</span>
</a>
