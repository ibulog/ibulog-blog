---
export interface Props {
	tag: string;
	href?: string;
}

const { tag, href } = Astro.props;
---

{href ? (
	<a href={href} class="no-underline">
		<span class="inline-flex items-center h-6 px-1.5 rounded-lg bg-app-tag-default border border-accent text-xs font-medium leading-none text-app-text-subtle">
			{tag}
		</span>
	</a>
) : (
	<span class="inline-flex items-center h-6 px-1.5 rounded-lg bg-app-tag-default border border-accent text-xs font-medium leading-none text-app-text-subtle">
		{tag}
	</span>
)}
