---
export interface Props {
	text?: string;
}

const { text } = Astro.props;
---

<blockquote class="flex flex-row items-stretch w-full">
	<div class="flex flex-col self-stretch w-2 bg-app-bg flex-shrink-0"></div>
	<div class="flex flex-row items-center flex-wrap flex-1 text-base text-app-text-subtle italic">
		{text ? text : <slot />}
	</div>
</blockquote>

