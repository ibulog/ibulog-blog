---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

export interface Props {
  src: string | ImageMetadata;
  alt?: string;
  width?: number;
  height?: number;
}

const { src, alt = "", width, height } = Astro.props;
---

<Image
  src={src as any}
  alt={alt}
  width={width}
  height={height}
  class="w-full h-auto rounded-xl"
/>
