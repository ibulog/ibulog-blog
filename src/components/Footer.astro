---
import { SOCIAL_LINKS } from '../config';
import XIcon from './ui/XIcon.astro';
import GitHubIcon from './ui/GitHubIcon.astro';

const today = new Date();
const currentYear = today.getFullYear();

export interface Props {}
---

<footer class="w-full bg-app-bg text-app-text-subtle rounded-xl px-6 py-6 flex flex-row items-center h-16">
	<div class="flex">
		<span class="text-sm font-normal">
			&copy; {currentYear} ibulog
		</span>
	</div>
	<div class="flex justify-end flex-1 items-center gap-4">
		<a href={SOCIAL_LINKS.X} target="_blank" rel="noopener noreferrer" aria-label="X (Twitter)" class="text-app-text-subtle hover:text-app-text">
			<XIcon />
		</a>
		<a href={SOCIAL_LINKS.GITHUB} target="_blank" rel="noopener noreferrer" aria-label="GitHub" class="text-app-text-subtle hover:text-app-text">
			<GitHubIcon />
		</a>
	</div>
</footer>
