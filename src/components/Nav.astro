---
import getPageEmoji from '../utils/getPageEmoji.ts';

const {pageKind} = Astro.props;
const emoji = getPageEmoji(pageKind);
---
<style>
.nav {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 1.25rem;
  gap: 0.25rem;

}
.toggle {
  display: none;
  cursor: pointer;
}
.menu {
  display: none;
}
#toggle:checked + .menu {
  display: block;
  position: absolute;
  top: 50px;
}
.drop-menu {
  background-color: var(--navigation-color);
  list-style: none;
  /* https://getcssscan.com/css-box-shadow-examplesの#38 */
  box-shadow: rgba(0, 0, 0, 0.1) 0px 10px 15px -3px, rgba(0, 0, 0, 0.05) 0px 4px 6px -2px;
  border-radius: 5px;
  padding: 0;
}
.drop-menu-list a {
  display: block;
  padding: 7px 10px;
  text-decoration: none;
}
.arrow{
  transform: rotate(180deg);
}
#toggle:checked ~ .arrow{
  transform: rotate(0deg);
}
</style>
<div class="nav">
  <label for="toggle" onclick="">{emoji} {pageKind}</label>
  <input type="checkbox" id="toggle" class="toggle" autocomplete="off">
  <div class="menu">
    <ul class="drop-menu">
      <li class="drop-menu-list">
        <a href="/">🥱 About</a>
      </li>
      <li class="drop-menu-list">
        <a href="/job">🧑‍🔧 Job</a>
      </li>
      <li class="drop-menu-list">
        <a href="/blog">📝 Blog</a>
      </li>
    </ul>
  </div>
  <div class="arrow">
    <i class="fa-solid fa-chevron-up"></i>
  </div>
</div>