---
import Nav from './Nav.astro';
import ThemeIcon from './ThemeIcon.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../config';

const {pageKind} = Astro.props;
---

<header class="header">
	<h2>
			{SITE_TITLE}
	</h2>
	<ThemeIcon />
	<Nav pageKind={pageKind}/>
</header>
<style>
	header {
		display: flex;
		justify-content: space-between;
		margin: 0em 0 1em;
	}
</style>
