---
import Nav from './Nav.astro';
import ThemeIcon from './ThemeIcon.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../config';

const {pageKind} = Astro.props;
---

<header>
	<h2>
			{SITE_TITLE}
	</h2>
	<div class="property">
		<ThemeIcon />
		<Nav pageKind={pageKind}/>
	</div>
</header>
<style>
	header {
		display: flex;
		justify-content: space-between;
		margin: 0em 0 1em;
	}
	.property {
		display: flex;
		align-items: center;
	}
</style>
