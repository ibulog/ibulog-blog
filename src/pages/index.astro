---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

const pageKind = 'About'
---

<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} url="/" image="/icon.jpeg" />
		<style>
			.sectionTitle {
				font-weight: 700;
				font-size: var(--f-u8);
			}
			.icon {
				width: 150px; 
				margin: 0 25px 40px 25px;
				border-radius: 50%;
				border: 2px solid var(--text-color);
				transition: transform 2s ease;
			}
			.icon:hover {
      transform: rotate(360deg); /* クリック時に360度回転 */
    }
		</style>
	</head>
	<body>
		<Header pageKind={pageKind}/>
		<main>
			<h1>
				{pageKind}
			</h1>
			<h2>Self-Portrait</h2>
				<div class="bio-img">
					<img class="icon" src="/icon.jpeg" />
				</div>
			<h2>
				Name
			</h2>
			<p>
				ibulog
			</p>
			<h2>
				Location
			</h2>
			<p>
				Kyoto, Japan
			</p>
			<h2>
				Job
			</h2>
			<p>
				Technical Writer
			</p>
			<h2>
				Interest
			</h2>
			<p>
				Web Development, Documentation, Car Racing🏎️
			</p>
			<h2>
				Contact
			</h2>
			<ul>
				<li>
					<i class="fa-brands fa-x-twitter fa-lg"></i>
					：
					<a href="https://twitter.com/ibulog_" target="_blank">@ibulog_</a>
				</li>
				<li>
					<i class="fa-brands fa-github fa-lg"></i>
					：
					<a href="https://github.com/ibulog" target="_blank">ibulog</a>
				</li>
			</ul>
		</main>
		<Footer />
	</body>
</html>
