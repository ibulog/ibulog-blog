---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../config';

const pageKind = 'about'
---

<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} url="/" image="/icon.jpeg" />
		<style>
			.wrapper {
				display: flex;
				flex-wrap: wrap;
				justify-content: center;
				align-items: center;
				width: 100%;
				margin-top: 2em;
				margin-bottom: 2em;
			}
			.sectionTitle {
				font-weight: 700;
				font-size: var(--f-u8);
			}
			.icon {
				width: 150px; 
				margin: 0 25px 40px 25px;
				border-radius: 50%;
				border: 1px solid #ccc;
				transition: transform 2s ease;
			}
			.icon:hover {
      transform: rotate(360deg); /* クリック時に360度回転 */
    }
			.bio {
				line-height: 2;
				margin-bottom: 2rem;
			}
		</style>
	</head>
	<body>
		<Header pageKind={pageKind}/>
		<main>
			<h1>
				About
			</h1>
			<div class="wrapper">
				<img class="icon" src="/icon.jpeg" />
				<div class="bio">
					<ul>
						<li>
							名前: ibulog
						</li>
						<li>
							場所: 京都
						</li>
						<li>
							仕事: UXライター
						</li>
						<li>
							好きなもの: 車、つけもの、京都、諏訪
						</li>
						<li>
							<i class="fa-brands fa-x-twitter fa-lg"></i>
							：
							<a href="https://twitter.com/ibulog_" target="_blank">@ibulog_</a>
						</li>
						<li>
							<i class="fa-brands fa-github fa-lg"></i>
							：
							<a href="https://github.com/ibulog" target="_blank">ibulog</a>
						</li>
					</ul>
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>
