---
import type { GetStaticPathsOptions, Page } from "astro";
import type { CollectionEntry } from "astro:content";
import { getCollection } from "astro:content";

import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../config';

type Props = {
  page: Page<CollectionEntry<'blog'>>;
};

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
  const allPosts = await getCollection('blog');
  const allPostsSorted = allPosts.sort(
    (a, b) => new Date(b.data.pubDate).valueOf() - new Date(a.data.pubDate).valueOf()
  )
  return paginate(allPostsSorted, { pageSize: 10 });
}

const { page } = Astro.props
const { start, end, total, data, currentPage, lastPage } = page

---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} url="/" image="/icon.jpeg" />
		<style>
			ul {
				list-style-type: none;
				padding: unset;
			}
      ul li {
        margin-bottom: 1.5em;
      }
      .title a {
        color: #030302;
        text-decoration: none;
      }
      .metaData div {
        font-family: 'Quicksand';
        font-size: 0.75em;
        margin-right: 1em;
        display: inline;
      }
			ul li time {
				flex: 0 0 130px;
				color: #23221e;
			}
      ul li span {
        margin-right: 0.25em;
        padding: 0 0.5em 0 0.5em;
        border: 1px solid #c1bdb7;
        border-radius: 15px;
				color: #23221e;
      }
      .wrapper {
        display: flex;
        justify-content: center;
        position: relative;
        color: #030302;
      }
      .page-button {
        position: absolute;
        left: 0;
      }
      .page-button a {
        color: #030302;
        text-decoration: none;
      }
      .page-number {
        color: #030302;
      }
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section>
				<ul>
					{
						page.data.map(({ data, slug }) => (
							<li>
								<div class="title">
								  <a href={`/blog/${slug}`}>{data.title}</a>
                </div>
                <div class="metaData">
                  <div>
                    <i class="fa-regular fa-calendar"></i>
                    <time datetime={data.pubDate}>
                      {new Date(data.pubDate).toLocaleDateString('en-us', {
                        year: 'numeric',
                        month: 'short',
                        day: 'numeric',
                      })}
                    </time>
                  </div>
                  <div>
                    <i class="fa-solid fa-tag"></i>
                    {data.tags.map((tag) => (
                      <span>{tag}</span>
                    ))}
                  </div>
                </div>
							</li>
						))
					}
				</ul>
			</section>
      <div class="wrapper">
        <div class="page-button">
          {currentPage !== 1 && currentPage !== 2 ? <a href={page.url.prev}><i class="fa-regular fa-circle-left"></i> Prev</a> : null}
          {currentPage === 2 ? <a href='/blog'><i class="fa-regular fa-circle-left"></i> Prev</a> : null}
          {currentPage !== lastPage ? <a href={page.url.next}>Next <i class="fa-regular fa-circle-right"></i></a> : null}
        </div>
        <div class="page-number">
          {currentPage} / {lastPage}
        </div>
      </div>
		</main>
		<Footer />
	</body>
</html>