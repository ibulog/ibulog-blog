---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, ICON_IMAGE, PAGE_KINDS } from '../../config';

const baseUrl = "/test";
const entries = await getCollection('test');

---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION} url={baseUrl} image={ICON_IMAGE} pageKind={PAGE_KINDS.ABOUT}>
	<div class="flex flex-col gap-9">
		{entries.map((entry) => (
			<article class="flex flex-col gap-4 p-6 border border-app-border-default rounded-lg">
				<h2 class="text-2xl font-bold text-app-text">
					<a href={`${baseUrl}/${entry.id}`} class="hover:text-app-text-secondary">
						{entry.data.title}
					</a>
				</h2>
				<p class="text-base text-app-text-secondary">
					{entry.data.description}
				</p>
			</article>
		))}
	</div>
</BaseLayout>