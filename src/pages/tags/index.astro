---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../config';
import { tags } from '../../content.config';
import tagLink from '../../utils/tagLink';
import H2 from '../../components/ui/H2.astro';
import Tag from '../../components/ui/Tag.astro';

const pageKind = 'Tags';

// content.config.tsで定義されたタグを使用
const sortedTags = [...tags].sort();
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION} url="/tags" image="/icon.jpeg" pageKind={pageKind}>
	<div class="flex flex-col gap-10">
		<H2 text="Tags" />
		<div class="flex flex-row justify-center flex-wrap gap-3 w-full">
			{sortedTags.map((tag) => (
				<Tag tag={`#${tag}`} href={`/tags/${tagLink(tag)}`} />
			))}
		</div>
	</div>
</BaseLayout>

