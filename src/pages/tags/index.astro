---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { SITE_TITLE, SITE_DESCRIPTION, ICON_IMAGE, PAGE_KINDS } from '../../config';
import { tags } from '../../content.config';
import H2 from '../../components/ui/H2.astro';
import Tag from '../../components/ui/Tag.astro';

const pageKind = PAGE_KINDS.TAGS;

// content.config.tsで定義されたタグを使用
const sortedTags = [...tags].sort();
---

<BaseLayout title={SITE_TITLE} description={SITE_DESCRIPTION} url="/tags" image={ICON_IMAGE} pageKind={pageKind}>
	<div class="flex flex-col gap-9">
		<H2 text="Tags" />
		<div class="flex flex-row justify-center flex-wrap gap-2.5 w-full">
			{sortedTags.map((tag) => (
				<Tag tag={tag} />
			))}
		</div>
	</div>
</BaseLayout>

